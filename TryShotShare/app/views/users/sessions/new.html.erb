
<style type="text/css">

  @import "http://webfonts.ru/import/basicomical.css";

  .control-label {
    color: black;
    font-size: 20px;
    margin-top: 15px;
    font-family: 'Basic Comical NC';
  }

  .remember_me {
    color: black;
    font-family: 'Basic Comical NC';
  }

  .col-sm-4{
    width: 420px;
  }

  .login_background {
    background: rgba(255,255,255,0.7);
  }

  .forgot {
    position: absolute;
    top: -20px;
    right: 15px;
  }

  .btn {
    margin-bottom: 10px;
  }

  .form-horizontal {
    width: 50%;
    margin: 0 auto;
  }

  .last_block_of_form {
    width: 50%;
    margin: 0 auto;
  }

</style>

<div class="login_background"> 


<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %><br />
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %><br />
    <div class="col-sm-4">
      <div class="forgot">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end -%>
      </div>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-6 col-sm-offset-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "remember_me" %>
      </div>
    </div>
  <% end -%>

  <div class="form-group last_block_of_form">
    <div class="col-sm-6 col-sm-offset-2">
      <%=  f.submit "Sign in", class: 'btn btn-primary' %>
    </div>
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
    <% end %>
  </div>

<% end %>
</div>