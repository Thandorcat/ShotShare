<style type="text/css">

  .control-label {
    color: black;
    font-family: 'Basic Comical NC';
    font-size: 20px;
  }

  i {
    color: black;
    margin-left: 15px;
  }

  .edit {
    background: rgba(255,255,255,0.7);
    position: relative;
  }

  .name_label, .name_field, .password {
    margin-top: 15px;
  }

  .custom_devise_error {
    color: white;
    background: rgba(250,130,88, 0.7);
  }

  .form-horizontal {
    width: 50%;
    margin: 0 auto;
  }

  .actions {
    padding: 10px;
    width: 50%;
    margin: 0 auto;
  }

  .btn-danger {
    position: absolute;
    right: 5px;
    top: 5px;
  }

  .devise_error {
    height: 200px;
    width: 30%;
    margin: 0 auto;
  }
</style>

<div class="devise_error">
  <% if devise_error_messages? %>
    <div class="custom_devise_error"><%= devise_error_messages! %></div>
  <% end %>
</div>

  <div class="edit">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
       html: { method: :put, class: 'form-horizontal' }) do |f| %>
       
        <div class="form-group">
          <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
          <div class="col-sm-6">
            <%= f.file_field :avatar %>
          </div>
        </div>
      
        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label name_label'  %>
          <div class="col-sm-5">
            <%= f.text_field :name, class: 'form-control name_field'  %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-2 control-label'  %>
          <div class="col-sm-5">
            <%= f.email_field :email, class: 'form-control'  %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password, class: 'col-sm-2 control-label password' %>
          <i>(<%= @minimum_password_length %> characters minimum)</i>
          <br/>
          <div class="col-sm-5">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :confirm, class: 'col-sm-2 control-label' %>
          <div class="col-sm-5">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :current_password, class: 'col-sm-2 control-label' %> 
          <br/>
          <div class="col-sm-5">
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
          
        <div class="actions">
          <%= f.submit "Update Profile", class: 'btn btn-primary'%>
        </div>
     
    <% end %>
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
  </div>